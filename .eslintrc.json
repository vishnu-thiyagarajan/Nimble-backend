{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["standard", "eslint:recommended", "prettier"],
    "ignorePatterns": ["node_modules", "build", "test"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": [0, "windows"],
        "quotes": ["warn", "double"],
        "semi": ["warn", "always"],
        "no-unused-vars": "warn"
    }
}
